{{!-- style with the same random-beer format --}}

<div class="random-beer">
    {{#each clickedBeer}}
        {{!-- {{> beerCard this}} --}}
    <a href="/beers/{{id}}"><img src="{{image_url}}" alt="Image for {{name}}"></a>
    <div class="random-beer-details">
        <h3>{{name}}</h3>
        <p class="tagline">{{tagline}}</p>
        <p class="description">{{description}}</p>
        <div class="food-pairing">
            <h5>Food Pairing</h5>
            <ul>
                {{#each food_pairing}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>Brewer Tips: {{brewers_tips}}</p>
        </div>
    </div> 
    {{/each}}
</div>